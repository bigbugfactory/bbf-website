{
	"extends": ["tslint:recommended", "tslint-sonarts", "tslint-config-prettier"],
	"rulesDirectory": ["node_modules/codelyzer"],
	"rules": {
		"arrow-return-shorthand": true,
		"callable-types": true,
		"class-name": true,
		"forin": true,
		"interface-over-type-literal": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-super": true,
		"no-empty-interface": true,
		"no-eval": true,
		"no-inferrable-types": [true, "ignore-properties", "ignore-params"],
		"no-misused-new": true,
		"no-shadowed-variable": true,
		"no-string-literal": false,
		"no-string-throw": true,
		"no-unnecessary-initializer": true,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"prefer-const": true,
		"radix": true,
		"triple-equals": [true, "allow-null-check"],
		"unified-signatures": true,
		"directive-selector": [true, "attribute", "app", "camelCase"],
		"component-selector": [true, "element", "app", "kebab-case"],
		"no-conflicting-lifecycle": true,
		"no-host-metadata-property": true,
		"no-inputs-metadata-property": true,
		"no-output-native": true,
		"no-output-rename": true,
		"no-outputs-metadata-property": true,
		"template-banana-in-box": true,
		"template-no-negated-async": true,
		"use-lifecycle-interface": true,
		"variable-name": [true, "allow-leading-underscore"],
		"indent": [true, "tabs"],
		"array-type": false,
		"arrow-parens": false,
		"deprecation": {
			"severity": "warn"
		},
		"import-blacklist": [true, "rxjs/Rx"],
		"interface-name": false,
		"max-classes-per-file": [true, 1],
		"max-line-length": [true, 140],
		"member-access": [true, "check-accessor", "check-parameter-property"],
		"member-ordering": [
			true,
			{
				"order": [
					"public-static-field",
					"public-instance-field",
					"protected-static-field",
					"protected-instance-field",
					"private-static-field",
					"private-instance-field",
					"constructor",
					"public-static-method",
					"public-instance-method",
					"protected-static-method",
					"protected-instance-method",
					"private-static-method",
					"private-instance-method"
				]
			}
		],
		"no-consecutive-blank-lines": [true, 1],
		"whitespace": [true, "check-module"],
		"no-console": [true, "debug", "info", "time", "timeEnd", "trace", "log"],
		"no-empty": [true, "allow-empty-functions", "allow-empty-catch"],
		"no-non-null-assertion": true,
		"no-redundant-jsdoc": true,
		"no-switch-case-fall-through": true,
		"no-use-before-declare": true,
		"no-var-requires": false,
		"no-any": true,
		"no-magic-numbers": false,
		"object-literal-key-quotes": [true, "as-needed"],
		"one-line": [
			true,
			"check-else",
			"check-open-brace",
			"check-catch",
			"check-finally",
			"check-whitespace"
		],
		"object-literal-sort-keys": false,
		"ordered-imports": [
			true,
			{
				"grouped-imports": true,
				"module-source-path": "full"
			}
		],
		"quotemark": [true, "single"],
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never"
			}
		],
		"no-output-on-prefix": true,
		"use-input-property-decorator": true,
		"use-output-property-decorator": true,
		"use-host-property-decorator": true,
		"no-input-rename": true,
		"use-life-cycle-interface": true,
		"use-pipe-transform-interface": true,
		"component-class-suffix": true,
		"directive-class-suffix": true,
		"typedef": [
			true,
			"call-signature",
			"arrow-call-signature",
			"parameter",
			"arrow-parameter",
			"property-declaration",
			"member-variable-declaration",
			"object-destructuring",
			"array-destructuring"
		]
	}
}
